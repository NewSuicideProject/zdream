root = true

# ==============================================================================
# 1. Global & Web Settings
# ==============================================================================
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
spelling_languages = en-us

[*.{csproj,vbproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2

[*.{json,json5,webmanifest,html,js,jsx,ts,tsx,css,scss}]
indent_size = 2

# ==============================================================================
# 3. C# (Unity & .NET) - Optimized
# ==============================================================================
[*.{cs,csx,cake,vb,vbx}]
