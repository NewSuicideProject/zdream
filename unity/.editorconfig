# ------------------------------------------------------------------------------
# Naming Conventions (Grouped for Brevity)
# ------------------------------------------------------------------------------
# 1. Interface (Start with I, PascalCase)
dotnet_naming_rule.interface_should_be_begins_with_i.severity = error
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i

# 2. General PascalCase (Class, Struct, Enum, Delegate, Method, Property, Event, Public Fields)
dotnet_naming_rule.common_pascal_symbols_rule.severity = warning
dotnet_naming_rule.common_pascal_symbols_rule.symbols = common_pascal_symbols
dotnet_naming_rule.common_pascal_symbols_rule.style = pascalcase

# 3. Private Fields (_camelCase)
dotnet_naming_rule.private_fields_rule.severity = warning
dotnet_naming_rule.private_fields_rule.symbols = private_fields
dotnet_naming_rule.private_fields_rule.style = camelcasewith_

# 4. Parameters (camelCase)
dotnet_naming_rule.parameters_rule.severity = warning
dotnet_naming_rule.parameters_rule.symbols = parameters
dotnet_naming_rule.parameters_rule.style = camelcase

# [Symbols Definitions]
dotnet_naming_symbols.interface.applicable_kinds = interface
dotnet_naming_symbols.interface.applicable_accessibilities = *

# Merged all PascalCase symbols into one group
dotnet_naming_symbols.common_pascal_symbols.applicable_kinds = class, struct, enum, delegate, method, property, event
dotnet_naming_symbols.common_pascal_symbols.applicable_accessibilities = *

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private, internal, private_protected

dotnet_naming_symbols.parameters.applicable_kinds = parameter

# [Styles Definitions]
dotnet_naming_style.begins_with_i.required_prefix = I
dotnet_naming_style.begins_with_i.capitalization = pascal_case

dotnet_naming_style.pascalcase.capitalization = pascal_case

dotnet_naming_style.camelcasewith_.required_prefix = _
dotnet_naming_style.camelcasewith_.capitalization = camel_case

dotnet_naming_style.camelcase.capitalization = camel_case

