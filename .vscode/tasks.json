{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Test",
      "type": "shell",
      "command": "conda",
      "args": [
        "run",
        "-n",
        "zdream",
        "--no-capture-output",
        "python",
        "-m",
        "python.test.test"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Start TensorBoard",
      "type": "shell",
      "command": "conda",
      "args": [
        "run",
        "-n",
        "zdream",
        "--no-capture-output",
        "tensorboard",
        "--logdir=${workspaceFolder}\\tests",
        "--bind_all"
      ],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^$"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*TensorBoard.*",
            "endsPattern": "^.*(http://|localhost).*"
          }
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
